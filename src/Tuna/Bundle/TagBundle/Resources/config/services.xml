<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="thecodeine.tag_bundle.tag_manager.class">TheCodeine\TagBundle\Doctrine\TagManager</parameter>
        <parameter key="thecodeine.tag_bundle.type.tag_collection.class">TheCodeine\TagBundle\Form\TagCollectionType</parameter>
    </parameters>

    <services>
        <service id="thecodeine.tag_bundle.tag_manager" class="%thecodeine.tag_bundle.tag_manager.class%">
            <argument type="service" id="thecodeine.tag_bundle.entity_manager"/>
        </service>

        <service id="thecodeine.tag_bundle.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>default</argument>
        </service>

        <service id="thecodeine.tag_bundle.type.tag_collection" class="%thecodeine.tag_bundle.type.tag_collection.class%">
            <argument type="service" id="thecodeine.tag_bundle.tag_manager"/>
            <tag name="form.type" alias="tag_collection"/>
        </service>
    </services>
</container>
