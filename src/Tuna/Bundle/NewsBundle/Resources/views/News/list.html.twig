<h1>list</h1>

<ul>
    {% for news in entities %}
        <li>
            <div>
                <h2>{{ news.title }}
                    <small>({{ news.createdAt|date("Y-m-d") }})</small>
                </h2>
                <p>{{ news.body|striptags[:150] ~ '...' }}</p>
                <p>
                    <a href="{{ path('tuna_news_edit', {'id': news.id}) }}" class="btn btn-default " title="edytuj">Edytuj</a>
                    <a href="{{ path('tuna_news_delete', {'id': news.id}) }}" class="btn btn-danger">Usu≈Ñ</a>
                </p>
            </div>
        </li>
    {% endfor %}
</ul>
