<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="the_codeine_editor.form.editor.class">TheCodeine\EditorBundle\Form\Type\EditorType</parameter>
        <parameter key="the_codeine_editor.form.twig.class">TheCodeine\EditorBundle\Twig\Extension\EditorExtension</parameter>
    </parameters>
    <services>
        <service id="the_codeine_editor.form.editor" class="%the_codeine_editor.form.editor.class%" scope="request">
            <tag name="form.type" alias="editor"/>
        </service>
        <service id="the_codeine_editor.form.twig" class="%the_codeine_editor.form.twig.class%">
            <tag name="twig.extension"/>
            <argument>%the_codeine_editor.options.autoinclude%</argument>
            <argument>%the_codeine_editor.options.standalone%</argument>
            <argument>%the_codeine_editor.options.base_path%</argument>
            <argument type="service" id="service_container"/>
        </service>
    </services>
</container>
