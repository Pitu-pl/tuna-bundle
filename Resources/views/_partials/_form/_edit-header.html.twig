{% trans_default_domain 'tuna_admin' %}

<div class="options">
    {{ 'ui.form.options'|trans }}
</div>

<div class="languages">
    {% include 'TheCodeineAdminBundle::_partials/_form/_translations.menu.html.twig' %}
</div>

<div class="controls">
    <div class="checkboxes">
        {% if form.published is defined %}
            {{ form_widget(form.published) }}
        {% endif %}

        {% if form.important is defined %}
            {{ form_widget(form.important) }}
        {% endif %}

        {{ headerOptions|raw }}
    </div>
    <div class="button">
        {{ form_widget(form.save, { attr: { class: 'btn btn-tertiary btn-wide' }}) }}
    </div>
</div>


