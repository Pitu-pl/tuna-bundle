{% trans_default_domain 'tuna_admin' %}
{% extends '@TheCodeineAdmin/_layout.html.twig' %}

{% block main_class %}bg-lightgray{% endblock %}

{% block content %}
    <div class="row admin-container edit-menu-tree" data-save-order-url="{{ path('tuna_menu_saveorder') }}">
        <div class="col-sm-12">
            {% for menu in menus %}
                <div class="admin-list">
                    <div class="action-buttons">
                        <a href="#" data-action="save-order" class="btn btn-primary btn-wide inactive">
                            <i class="fa fa-save" aria-hidden="true"></i> {% trans %}Save order{% endtrans %}
                        </a>
                    </div>
                    <ul data-menu-tree>
                        {% include '@TheCodeineAdmin/Dashboard/menu_item.html.twig' with { item: menu } %}
                    </ul>
                </div>
            {% endfor %}
            {% if pagination.totalItemCount %}
                <hr>
                {% include '@TheCodeineAdmin/Dashboard/pages_list.html.twig' %}
            {% endif %}
        </div>
    </div>
{% endblock %}
