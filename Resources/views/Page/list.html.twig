{% extends "TheCodeineAdminBundle::_layout.html.twig" %}
{% block main_class %}bg-lightgray{% endblock %}

{% block content %}
    {% if pagination|length == 0 %}
        <div class="admin-alert alert text-center">
            <h3>{% trans %}Oops there is nothing here!{% endtrans %}</h3>
            {% if is_granted('create', 'pages') %}
                <a href="{{ path('tuna_page_create') }}" class="btn btn-primary btn-wide">
                    <i class="fui-plus"></i> {% trans %}Add first item{% endtrans %}
                </a>
            {% endif %}
        </div>
    {% else %}
        <div class="row admin-container">
            <div class="col-sm-12">
                <div class="admin-list">
                    {% if is_granted('create', 'pages') %}
                        <div class="action-buttons">
                            <a href="{{ path('tuna_page_create') }}" class="btn btn-primary btn-wide">
                                <i class="fui-plus"></i> {% trans %}Add item{% endtrans %}
                            </a>
                        </div>
                    {% endif %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>{% trans %}No.{% endtrans %}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'p.title') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Slug'|trans, 'p.slug') }}</th>
                            <th class="center">{{ knp_pagination_sortable(pagination, 'Published'|trans, 'p.published') }}</th>
                            <th class="center">{% trans %}Menu{% endtrans %}</th>
                            <th class="text-right">{% trans %}Options{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in pagination %}
                            <tr data-enabled="{{ item.published|round }}" class="{% if not item.published %}unpublished{% endif %}">
                                <td>{{ loop.index + offset }}</td>
                                <td>{{ item.title }}</td>
                                <td>{{ item.slug }}</td>
                                <td class="center">
                                    {% if item.published %}
                                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                                    {% else %}
                                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                                    {% endif %}
                                </td>
                                <td class="center">
                                    {% if menuMap[item.id] is defined %}
                                        <a href="{{ path('tuna_menu_edit', { id: menuMap[item.id].id }) }}">
                                            <i class="fa fa-external-link"></i>
                                        </a>
                                    {% else %}
                                        <a href="{{ path('tuna_menu_create', { pageId: item.id }) }}">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    {% endif %}
                                </td>
                                <td class="options">
                                    <a href="{{ path('tuna_page_edit',{'id' : item.id}) }}" class="fa fa-pencil-square-o" aria-hidden="true"></a>
                                    {% if is_granted('delete', 'pages') %}
                                        <a href="#" data-title="{{ item.title }}" data-url="{{ path('tuna_page_delete',{'id' : item.id}) }}" data-target="#modal-confirm" data-action="delete" class="fa fa-trash" aria-hidden="true"></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {{ knp_pagination_render(pagination, 'TheCodeineAdminBundle::_partials/_pagination.html.twig') }}
                </div>
            </div>
        </div>
    {% endif %}
    <div class="clear"></div>
{% endblock content %}
