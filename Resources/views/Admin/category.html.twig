{% extends "TheCodeineAdminBundle::layout.html.twig" %}

{% block content_title %}
    <h3 class="text-center">{{ category.name }}</h3>
{% endblock content_title %}

{% block content %}
    <a href="{{ path('thecodeine_page_edit',{'cid' : category.id}) }}" class="add_button btn btn-hg btn-primary mlm">
        <i class="fui-plus-inverted"></i>
    </a>
    <div class="container">
        {% if pages is defined and pages|length > 0 %}
            <ul class="list-group admin-pages admin-list">
                {% for page in pages %}
                    <li class="list-group-item" data-enabled="{{ page.published|round }}">
                        <a href="{{ path('thecodeine_page_edit',{'id' : page.id}) }}"
                           class="">
                            {{ page.title }}
                        </a>
                        <a href="#"
                           data-title="{{ page.title }}"
                           data-url="{{ path('thecodeine_admin_page_delete',{'id' : page.id})}}"
                           data-target="#modal-confirm" data-action="delete"
                           class="fui-cross-inverted pull-right">
                        </a>
                        <a href="{{path('thecodeine_page_edit',{'id' : page.id})}}"
                           class="fui-new pull-right">
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock content %}