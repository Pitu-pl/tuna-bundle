<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="the_codeine_admin.menu_builder.class">TheCodeine\AdminBundle\Menu\Builder</parameter>
        <parameter key="the_codeine_admin.menu.item.class">Knp\Menu\MenuItem</parameter>
        <parameter key="the_codeine_admin.gedmo_tree_listener.class">Gedmo\Tree\TreeListener</parameter>
    </parameters>

    <services>
        <service id="gedmo.listener.tree" class="%the_codeine_admin.gedmo_tree_listener.class%">
            <tag name="doctrine.event_subscriber" connection="default" />
            <call method="setAnnotationReader">
                <argument type="service" id="annotation_reader" />
            </call>
        </service>

        <service id="the_codeine_admin.menu_builder" class="%the_codeine_admin.menu_builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="the_codeine_admin.menu.top" class="%the_codeine_admin.menu.item.class%"
                 factory-service="the_codeine_admin.menu_builder"
                 factory-method="buildTopMenu"
                 scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="menu.top" />
        </service>
        <service id="the_codeine_admin.menu.top.static" class="%the_codeine_admin.menu.item.class%"
                 factory-service="the_codeine_admin.menu_builder"
                 factory-method="buildTopMenuStatic"
                 scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="menu.top.static" />
        </service>
        <service id="the_codeine_admin.menu.sub" class="%the_codeine_admin.menu.item.class%"
                 factory-service="the_codeine_admin.menu_builder"
                 factory-method="buildSubmenu"
                 scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="menu.sub" />
        </service>
    </services>

</container>
